<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- <GenerateDocumentationFile>true</GenerateDocumentationFile> -->
    <PackageId>ModularMonolithSample.BuildingBlocks</PackageId>
    <Version>1.0.0</Version>
    <Description>Enterprise-grade building blocks for modular monolith architecture with modern .NET 9 features</Description>
    <Authors>ModularMonolithSample</Authors>
    <Copyright>Copyright Â© 2025 ModularMonolithSample</Copyright>
    <PackageProjectUrl>https://github.com/yagizuygarunlu/ModularMonolithSample</PackageProjectUrl>
    <RepositoryUrl>https://github.com/yagizuygarunlu/ModularMonolithSample</RepositoryUrl>
    <PackageTags>modular-monolith;clean-architecture;cqrs;mediatr;dotnet</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core ASP.NET Core packages -->
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" />
    <PackageReference Include="Microsoft.AspNetCore.Http" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    
    <!-- Health Checks -->
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks.Abstractions" />
    
    <!-- MediatR for CQRS -->
    <PackageReference Include="MediatR" />
    <PackageReference Include="MediatR.Extensions.Microsoft.DependencyInjection" />
    
    <!-- FluentValidation -->
    <PackageReference Include="FluentValidation" />
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" />
    
    <!-- Caching -->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" />
    <PackageReference Include="Microsoft.Extensions.Caching.Abstractions" />
    
    <!-- JSON Handling -->
    <PackageReference Include="System.Text.Json" />
    
    <!-- Observability and Metrics -->
    <PackageReference Include="System.Diagnostics.DiagnosticSource" />
    
    <!-- Modern .NET 9 Features -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Behaviors\" />
    <Folder Include="Common\" />
    <Folder Include="Controllers\" />
    <Folder Include="Examples\" />
    <Folder Include="Exceptions\" />
    <Folder Include="Extensions\" />
    <Folder Include="Filters\" />
    <Folder Include="Infrastructure\" />
    <Folder Include="Middleware\" />
    <Folder Include="Models\" />
    <Folder Include="HealthChecks\" />
    <Folder Include="Observability\" />
    <Folder Include="FeatureFlags\" />
  </ItemGroup>

</Project>
